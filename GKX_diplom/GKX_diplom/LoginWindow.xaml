        </Button>
        <Button x:Name="registerBtn" Content="" HorizontalAlignment="Left" Height="43" Margin="288,58,0,0" VerticalAlignment="Top" Width="40" ToolTip="Реєстрація" RenderTransformOrigin="0.35,1.767" Click="registerBtn_Click">
